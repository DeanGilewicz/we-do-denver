doctype html
html
  head
    title= `We Do Denver | ${pageTitle} `
    link(rel='stylesheet', href='/dist/style.css')
    //- link(rel="shortcut icon" type="image/png" href="")
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
    .wrapper__main
      block header
        header.header__main
          nav.main
            a.logo(href="/")
              img(src="http://via.placeholder.com/60x40?text=logo" alt="We Do Denver logo")
            span.divider |
            a.link.link--nav(href="/categories") Categories
            span.divider |
            a.link.link--nav(href="/tags") Tags
          nav.authenticate
            if user
              a.link.link--nav(href="/logout") Logout
              span.divider |
              a.link.link--nav(href="/account")
                img.avatar(src=user.gravatar alt="gravatar")
            else
              a.link.link--nav(href="/register") Sign Up
              span.divider |
              a.link.link--nav(href="/login") Login
      block messages
        if locals.flashes
          //- pre= h.dump(locals)
          - const categories = Object.keys(locals.flashes)
          each category in categories
            each message in flashes[category]
              .flash(class=`flash--${category}`)
                p.flash__text!= message
                button.flash__remove(onClick="this.parentElement.remove()") &times;
      .content
        block content

      block scripts
        //- script(src=`https://maps.googleapis.com/maps/api/js?key=${process.env.MAP_KEY}&libraries=places`)
        script(src="/dist/App.bundle.js")
