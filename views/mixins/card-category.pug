mixin card-category(place = {})
	.card
		.card__image
			img(src="img" alt="")
		h2.card__name= place.name || what
		h3.card__category
			img(src="img" alt="")
			a(href=`/places/${place.category.slug}`)= place.category.name
		.card__overview
			.card__likes
				img(src="img" alt="")
				!="5"
			.card__distance
				img(src="img" alt="")
				!="20 miles"
			.card__visits
				img(src="img" alt="")
				!="1"
		.card__ctas
			.card__ctas--view
				a(href=`/place/${place.id}` class="button") View