mixin card-visit-edit(place = {}, visit = {})
	div(class=`card__visit__edit card__visit--${i}`)
		form(id="js-visit-form" action=`/place/${place._id}/visit/${visit._id}` method="POST" class="card__visit__form")
			.card__visit--rating
				label(for="rating") rating
				select(name="visit[rating]" id="rating" class="form__input form__input--rating")
					option(value="") - Rating -
					option(value="5" selected=(typeof visit.rating !== 'undefined' && visit.rating === 5 ? true : false)) 5 - A Must Go
					option(value="4" selected=(typeof visit.rating !== 'undefined' && visit.rating === 4 ? true : false)) 4 - Highly Recommended
					option(value="3" selected=(typeof visit.rating !== 'undefined' && visit.rating === 3 ? true : false)) 3 - Worth A Visit
					option(value="2" selected=(typeof visit.rating !== 'undefined' && visit.rating === 2 ? true : false)) 2 - Underwhelming
					option(value="1" selected=(typeof visit.rating !== 'undefined' && visit.rating === 1 ? true : false)) 1 - Won't Go Back
			.card__visit--cost
				label(for="cost") cost
				select(name="visit[cost]" id="cost" class="form__input form__input--cost")
					option(value="") - Cost -
					option(value="5" selected=(typeof visit.cost !== 'undefined' && visit.cost === 5 ? true : false)) 5 - Great Value
					option(value="4" selected=(typeof visit.cost !== 'undefined' && visit.cost === 4 ? true : false)) 4 - Pleasantly Surprised
					option(value="3" selected=(typeof visit.cost !== 'undefined' && visit.cost === 3 ? true : false)) 3 - What You'd Expect
					option(value="2" selected=(typeof visit.cost !== 'undefined' && visit.cost === 2 ? true : false)) 2 - A Little High
					option(value="1" selected=(typeof visit.cost !== 'undefined' && visit.cost === 1 ? true : false)) 1 - Way Overpriced
			.card__visit--comment
				label(for="comment") comment
				textarea(rows="2" name="visit[comment]" id="comment" class="form__input form__input--edit form__input--comment" placeholder="I thought...") #{visit.comment || ''}
			input(type="hidden" name="placeId" value=`${place._id}`)
			.card__actions
				a(href=`/place/${place._id}/visits` class="button button__visits--cancel") Cancel
				button(class="button button__visit--save") Save
	.ajax__response
		.response__message

