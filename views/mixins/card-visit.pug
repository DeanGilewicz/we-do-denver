mixin card-visit(place = {}, visit = {}, i)
	div(class=`card__visit card__visit--${i}`)
		.card__actions
			a(href=`/place/${place._id}/visit/${visit._id}` class="")
				img(src="/images/icon-edit.svg" alt="edit visit")
		.card__visit--date
			h4 #{visit.prettyCreated}
		.card__visit--rating
			h5 Experience Rating
			p #{visit.rating}
		.card__visit--cost
			h5 Cost Rating
			p #{visit.cost}
		-if( visit.comment ) {
			.card__visit--comment
				h5 Comment
				p #{visit.comment}
		- }
		.card__actions
			img(src="/images/icon-delete.svg" alt="delete visit")

